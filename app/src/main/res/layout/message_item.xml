<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    app:cardCornerRadius="@dimen/dp_4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/user"
            android:layout_margin="@dimen/dp_4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/message_item_image"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_4">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">
                    <TextView
                        android:id="@+id/message_item_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/message_from"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"/>
                    <TextView
                        android:id="@+id/message_item_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/message_action"
                        android:layout_marginStart="@dimen/dp_4"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/colorPrimaryText"/>
                    <TextView
                        android:id="@+id/message_item_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/message_to"
                        android:layout_marginStart="@dimen/dp_4"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_16"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/message_date"/>

            </RelativeLayout>
            <TextView
                android:id="@+id/message_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/message_content"
                android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>