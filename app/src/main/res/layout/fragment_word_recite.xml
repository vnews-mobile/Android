<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_word_recite_layout"
    android:background="@color/colorBaseBackground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:id="@+id/fragment_word_recite_app_bar">

            <!-- The Toolbar -->
            <android.support.v7.widget.Toolbar
                android:id="@+id/fragment_word_recite_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/ThemeOverlay.AppCompat.Light"
                app:title="记单词"
                app:titleTextColor="@color/colorPrimaryText"/>
        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragment_word_recite_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:text="@string/sheet_word"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:textSize="60dp"
            tools:ignore="RelativeOverlap"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@color/me_background"/>

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_4"
            android:id="@+id/fragment_word_recite_expand"
            android:background="@drawable/ic_expand_more_black_24dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_word_recite_means"
            android:visibility="gone"
            android:text="@string/sheet_means"
            android:textSize="@dimen/sp_18"
            android:layout_margin="@dimen/dp_14"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatButton
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:textSize="@dimen/sp_16"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/sp_16"
                android:id="@+id/fragment_word_recite_unknown"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ripple_collect"
                android:text="生词"
                android:layout_marginEnd="@dimen/dp_24"
                android:layout_toStartOf="@+id/fragment_word_recite_collect"
                android:layout_marginBottom="@dimen/dp_24"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:textSize="@dimen/sp_16"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/sp_16"
                android:id="@+id/fragment_word_recite_collect"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ripple_collect"
                android:layout_centerHorizontal="true"
                android:text="收藏"
                android:layout_marginBottom="@dimen/dp_24"/>

            <android.support.v7.widget.AppCompatButton
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_35"
                android:textSize="@dimen/sp_16"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/sp_16"
                android:id="@+id/fragment_word_recite_known"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ripple_collect"
                android:layout_marginStart="@dimen/dp_24"
                android:text="熟记"
                android:layout_toEndOf="@+id/fragment_word_recite_collect"
                android:layout_marginBottom="@dimen/dp_24"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/sp_20">
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_word_recite_back"
            android:tint="@color/colorSecondaryText"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_back_black_24dp"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dp_14"
            android:text="1/23"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/colorSecondaryText"
            android:id="@+id/fragment_word_recite_process"/>
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorSecondaryText"
            android:id="@+id/fragment_word_recite_forward"
            android:background="@drawable/ic_arrow_forward_black_24dp"/>
    </RelativeLayout>


</RelativeLayout>